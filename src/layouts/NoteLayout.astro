---
import { renderMarkdown } from "../lib/markdown";
import Diagramma from "../components/Diagramma.svelte";
import AudioAvatarBridge from "../components/AudioAvatarBridge.svelte";

interface Props {
    title: string;
    content: string;
    type: "note" | "quiz" | "slide" | "diagram";
    userRole: "guest" | "admin";
}

const { title, content, type, userRole } = Astro.props;
const html = type !== "diagram" ? await renderMarkdown(content) : "";
const id = Astro.url.searchParams.get("id");
---

<div class="annotazione">
    <span class="pin">üìç </span>
    <div class="header-view">
        <h2>{title}</h2>
        <div class="actions">
            {
                type !== "slide" && (
                    <AudioAvatarBridge
                        title={title}
                        content={content}
                        client:load
                    />
                )
            }
            {
                userRole === "admin" && (
                    <a
                        href={`?id=${id}&edit=true`}
                        class="btn-edit"
                        title="Modifica nota"
                    >
                        üìù
                    </a>
                )
            }
        </div>
    </div>

    <div class="content-body">
        {
            type === "diagram" ? (
                <div class="diagram-workspace">
                    <Diagramma content={content} client:load />
                </div>
            ) : (
                <div
                    id="testo-renderizzato"
                    class="testo"
                    data-content={content}
                >
                    <Fragment set:html={html} />
                </div>
            )
        }
    </div>
</div>

<script>
    import { mount } from "svelte";
    import Quiz from "../components/Quiz.svelte";
    import Slide from "../components/Slide.svelte";

    async function mountInteractiveComponents() {
        const container = document.getElementById("testo-renderizzato");
        if (!container) return;

        // Mount Quizzes
        container.querySelectorAll(".quiz-placeholder").forEach((element) => {
            const ph = element as HTMLElement;
            if (ph.dataset.mounted) return;
            const dataStr = ph.getAttribute("data-quiz");
            if (dataStr) {
                try {
                    const decoded = decodeURIComponent(atob(dataStr));
                    const quizData = JSON.parse(decoded);
                    mount(Quiz, { target: ph, props: { quiz: quizData } });
                    ph.dataset.mounted = "true";
                    ph.style.minHeight = "0";
                    ph.style.border = "none";
                    ph.style.backgroundColor = "transparent";
                } catch (e) {
                    console.error("Errore mounting quiz:", e);
                }
            }
        });

        // Mount Slides
        const slidesPlaceholders =
            container.querySelectorAll(".slide-placeholder");
        if (slidesPlaceholders.length > 0) {
            const { createHighlighter } = await import("shiki");
            const hl = await createHighlighter({
                themes: ["github-light"],
                langs: [
                    "javascript",
                    "typescript",
                    "html",
                    "css",
                    "xml",
                    "json",
                    "bash",
                    "python",
                ],
            });

            slidesPlaceholders.forEach((element) => {
                const ph = element as HTMLElement;
                if (ph.dataset.mounted) return;
                const dataStr = ph.getAttribute("data-slide");
                if (dataStr) {
                    try {
                        const decoded = decodeURIComponent(atob(dataStr));
                        const slideData = JSON.parse(decoded);
                        const processedSlides = slideData.slides.map(
                            (slide: any) => {
                                if (slide.type === "code") {
                                    const renderedCode = hl.codeToHtml(
                                        slide.content,
                                        {
                                            lang: slide.lang || "text",
                                            theme: "github-light",
                                        },
                                    );
                                    return { ...slide, content: renderedCode };
                                }
                                return slide;
                            },
                        );
                        mount(Slide, {
                            target: ph,
                            props: { slides: processedSlides },
                        });
                        ph.dataset.mounted = "true";
                        ph.style.minHeight = "0";
                        ph.style.border = "none";
                        ph.style.backgroundColor = "transparent";
                    } catch (e) {
                        console.error("Errore mounting slide:", e);
                    }
                }
            });
        }
    }

    mountInteractiveComponents();
</script>

<style>
    .pin {
        position: absolute;
        top: -1rem;
        left: 0.5rem;
        font-size: 3rem;
        overflow: visible;
        z-index: 10;
    }
    .annotazione {
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 20px;
        font-family: var(--font-main);
        background-color: #fffcf0;
        padding: 40px;
        box-shadow:
            1px 1px 3px rgba(0, 0, 0, 0.1),
            5px 5px 0px rgba(0, 0, 0, 0.05);
        margin: 20px;
        max-width: 1200px;
        width: calc(100% - 40px); /* Assicura che si allarghi */
        min-height: 80vh;
        height: auto; /* Cresce col contenuto */
        flex-shrink: 0; /* Non si restringe mai per stare nel viewport */
    }
    .header-view {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 20px;
        border-bottom: 2px solid var(--text-ink);
        padding-bottom: 10px;
    }
    .header-view h2 {
        border-bottom: none;
        padding-bottom: 0;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 1px;
        flex: 1;
        font-size: 2rem;
        font-weight: bold;
        color: var(--text-ink);
    }
    .actions {
        display: flex;
        gap: 15px;
        align-items: center;
    }
    .btn-edit {
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        padding: 5px;
        border-radius: 50%;
        transition: transform 0.2s;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .btn-edit:hover {
        transform: scale(1.2);
        background-color: rgba(0, 0, 0, 0.05);
    }
    .testo {
        width: 100%;
        padding: 15px;
        border: none;
        font-family: var(--font-main);
        font-size: 1.1rem;
        line-height: 1.6;
        color: var(--text-ink);
    }
    .testo :global(.quiz-placeholder),
    .testo :global(.slide-placeholder) {
        min-height: 200px;
        background-color: rgba(0, 0, 0, 0.02);
        border: 1px dashed #ccc;
        margin: 20px 0;
        display: block;
    }
    .testo :global(img) {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 1rem 0;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        border: 1px solid #ddd;
    }
    .testo :global(em),
    .testo :global(i) {
        font-family:
            "Brush Script MT", "Brush Script Std", "Lucida Calligraphy", cursive;
        font-size: 1.7rem;
        color: #4e73ab;
        font-style: normal;
    }
    .diagram-workspace {
        flex-grow: 1;
        background: white;
        border: 1px solid #ccc;
        padding: 10px;
        overflow: hidden;
    }
</style>
