---
import BarraPrincipale from "../components/BarraPrincipale.svelte";
import MenuLaterale from "../components/MenuLaterale.svelte";
import NoteLayout from "../layouts/NoteLayout.astro";
import AnnotazioneEdit from "../components/AnnotazioneEdit.svelte";
import Layout from "../layouts/Layout.astro";
import { notesDb , type Note } from "../db/mysql";
import Messaggio from "../components/Messaggio.svelte";
import { isAdmin } from "../lib/auth";
import { getEntry } from "astro:content";
import PostIt from "../components/PostIt.svelte";
// import ConnectionLines from "../components/ConnectionLines.svelte"; // todo: da implementare in futuro
import { useTranslations } from "../i18n/utils";

const currentLang = Astro.currentLocale  || 'it'; // default 'it'
const i18n = await useTranslations(currentLang);

// Carica le note dal database lato server per il menu laterale
const notesData: Note[] | null = await notesDb.getAll();
const userIsAdmin = isAdmin(Astro.cookies);
const role = userIsAdmin ? "admin" : "guest";

// Gestione selezione nota tramite URL
const id = Astro.url.searchParams.get("id");
const isEditing = Astro.url.searchParams.get("edit") === "true";

// Ripristino stato se si torna dalla gestione file
const referer = Astro.request.headers.get("referer");
if (!id && referer && referer.includes("/admin/files")) {
  const lastUrl = Astro.cookies.get("last_note_url")?.value;
  if (lastUrl) {
    return Astro.redirect(decodeURIComponent(lastUrl));
  }
}

let selectedNote = null;
if (id) {
  // Priorit√† al Database (Real-time) per vedere subito le modifiche
  const dbNote = await notesDb.getById(parseInt(id));
  if (dbNote) {
    selectedNote = dbNote;
  } else {
    // Fallback alle Content Collections (per integrit√† o se non ancora in DB)
    const entry = await getEntry("notes", id);
    if (entry) {
      selectedNote = {
        id: parseInt(id),
        ...entry.data,
      };
    }
  }
}

// Crea l'array di connessioni dal database
const pinConnections = notesData
    ?.filter(note => note.parent_id !== null && note.parent_id !== undefined)
    .map(note => ({
        fromPinId: note.parent_id!,
        toPinId: note.id
    })) || [];
---

<Layout>
  <section>
    <BarraPrincipale
      titolo={i18n("main.title")}
      userRole={role}
      editMode={isEditing}
      client:load
    />
  </section>

  <div class="main-container">
    <aside class="sidebar">
      <MenuLaterale
        titolo={i18n("menu.title")}
        initialNotes={notesData}
        initialId={id}
        guideButtonLabel={i18n("menu.guideButton")}
        client:load
      />
    </aside>

    <main class="content-area">
      <canvas id="connection-canvas" class="connection-canvas"></canvas>
      <Messaggio client:load />
      {
        selectedNote ? (
          isEditing && userIsAdmin ? (
            <AnnotazioneEdit note={selectedNote} client:load />
          ) : (
            <NoteLayout
              title={selectedNote.title}
              content={selectedNote.content}
              type={(selectedNote.type as any) || "note"}
              userRole={role}
            />
          )
        ) : (
          notesData && notesData.length > 0 ? (
            <>
                {notesData.map((note) => (
                    <PostIt
                        id={note.id}
                        title={note.type || "note"}
                        message={note.title}
                        parent={note.parent_id}
                    />
                ))}
                <!-- todo: da implementare in futuro, per ora √® solo un placeholder
                <ConnectionLines pinConnections={pinConnections} client:load />
                -->
            </>
          ) : (
            <div class="empty-state">
              <div class="empty-state-card">
                <span class="pin">üìç </span>
                <span class="empty-icon">üìì</span>
                <h1>Benvenuto nel tuo Archivio</h1>
                <p>
                  Non sono presenti note.
                </p>
                <div class="empty-decoration">
                  <div class="line" />
                  <div class="line" />
                  <div class="line" />
                </div>
              </div>
            </div>
          )
        )
      }
    </main>
  </div>
</Layout>

<style is:global>
  .main-container {
    display: flex;
    height: calc(100vh - 60px);
    background-color: var(--bg-paper);
  }
  .sidebar {
    width: 25vw;
    min-width: 250px;
    background-color: var(--sidebar-bg);
    border-right: 1px solid #111;
    overflow-y: auto;
  }
  .content-area {
    position: relative;
    flex: 1;
    padding: 20px;
    overflow-y: auto;
    background-image: radial-gradient(#d0c9b6 2px, transparent 2px);
    background-size: 30px 30px;
    /* Layout per PostIt */
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 20px;
    align-content: flex-start;
    align-items: flex-start;
  }

  /* Empty State Styling */
  .empty-state {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 40px;
    width: 100%;
  }
  .empty-state-card {
    background: #fffcf0;
    padding: 60px;
    border-radius: 4px;
    box-shadow:
      1px 1px 3px rgba(0, 0, 0, 0.1),
      10px 10px 0px rgba(0, 0, 0, 0.05);
    text-align: center;
    max-width: 500px;
    border: 1px solid #e0d0a0;
    position: relative;
    animation: cardAppear 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }
  .pin {
    position: absolute;
    top: -1rem;
    left: 0.5rem;
    font-size: 3rem;
    overflow: visible;
    z-index: 10;
  }
  .empty-icon {
    font-size: 5rem;
    display: block;
    margin-bottom: 20px;
    filter: drop-shadow(2px 2px 0px rgba(0, 0, 0, 0.1));
    animation: iconFloat 3s ease-in-out infinite;
  }
  .empty-state-card h1 {
    font-family: var(--font-main);
    color: var(--text-ink);
    font-size: 2rem;
    margin-bottom: 15px;
    text-transform: uppercase;
    letter-spacing: 2px;
  }
  .empty-state-card p {
    font-family: var(--font-main);
    color: #666;
    line-height: 1.6;
    font-size: 1.1rem;
  }
  .empty-decoration {
    margin-top: 30px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    align-items: center;
  }
  .empty-decoration .line {
    height: 2px;
    background: #e0d0a0;
    width: 60%;
  }
  .empty-decoration .line:nth-child(2) {
    width: 40%;
  }
  .empty-decoration .line:nth-child(3) {
    width: 20%;
  }

  @keyframes cardAppear {
    from {
      opacity: 0;
      transform: translateY(30px) rotate(-1deg);
    }
    to {
      opacity: 1;
      transform: translateY(0) rotate(0);
    }
  }
  @keyframes iconFloat {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  

  .connection-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 100;
}
</style>