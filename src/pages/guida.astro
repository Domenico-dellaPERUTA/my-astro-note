---
import { getCollection, render } from "astro:content";
import Layout from "../layouts/Layout.astro";

const allDocs = await getCollection("docs");
const sortedDocs = allDocs.sort((a, b) => a.data.order - b.data.order);
---

<Layout>
    <div class="guida-wrapper">
        <header class="guida-header">
            <a href="/" class="back-link">← Torna alle Note</a>
            <h1>Guida dell'Applicazione</h1>
            <p class="subtitle">
                Tutto quello che c'è da sapere per usare al meglio le tue note.
            </p>
        </header>

        <main class="guida-content">
            <div class="docs-list">
                {
                    allDocs.length === 0 && (
                        <p>
                            Nessun manuale trovato. Controlla la tua cartella
                            `src/content/docs/`.
                        </p>
                    )
                }
                {
                    sortedDocs.map(async (doc) => {
                        const { Content } = await render(doc);
                        return (
                            <article class="doc-article" id={doc.id}>
                                <div class="article-inner">
                                    <Content />
                                </div>
                            </article>
                        );
                    })
                }
            </div>
        </main>
    </div>
</Layout>

<style>
    .guida-wrapper {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem;
        min-height: 100vh;
    }

    .guida-header {
        border-bottom: 2px solid var(--text-ink);
        margin-bottom: 3rem;
        padding-bottom: 1rem;
    }

    .back-link {
        display: inline-block;
        color: var(--highlight);
        text-decoration: none;
        font-weight: bold;
        margin-bottom: 1rem;
        transition: transform 0.2s;
    }

    .back-link:hover {
        transform: translateX(-5px);
    }

    h1 {
        font-size: 2.5rem;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .subtitle {
        font-style: italic;
        color: #666;
    }

    .doc-article {
        background: #fff;
        padding: 2rem;
        margin-bottom: 2rem;
        border: 1px solid #ddd;
        box-shadow: 5px 5px 0px var(--text-ink);
        position: relative;
    }

    .doc-article::before {
        content: "DOC";
        position: absolute;
        top: -10px;
        right: 20px;
        background: var(--highlight);
        color: white;
        padding: 2px 10px;
        font-size: 0.8rem;
        font-weight: bold;
    }

    .article-inner {
        line-height: 1.6;
    }

    /* Styling for the rendered Markdown */
    .article-inner :global(img) {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 1.5rem auto;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        border-radius: 4px;
    }

    .article-inner :global(h1) {
        color: var(--highlight);
        border-bottom: 1px dashed #ccc;
        padding-bottom: 0.5rem;
    }

    .article-inner :global(h2) {
        margin-top: 2rem;
        font-size: 1.4rem;
    }

    .article-inner :global(ul) {
        padding-left: 1.5rem;
    }

    .article-inner :global(li) {
        margin-bottom: 0.5rem;
    }

    .article-inner :global(strong) {
        color: var(--highlight);
    }

    /* Stile corsivo "a mano" per il testo enfatizzato nella guida */
    .article-inner :global(em),
    .article-inner :global(i) {
        font-family:
            "Brush Script MT", "Brush Script Std", "Lucida Calligraphy",
            "Lucida Handwriting", "Apple Chancery", cursive;
        font-size: 1.3rem;
        color: #555;
        font-style: normal;
    }
</style>
